extends ../layout

block content
    .page-header
        h3 Sign up
    form.form-horizontal(id='signup-form', method='POST' action='createsport')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label.col-sm-3.control-label(for='name') Sport Name
            .col-sm-7
                input.form-control(type='text', name='name', id='name', placeholder='Sport name', autofocus, required)
        .form-group
            label.col-sm-3.control-label(for='type') Sport Type
            .col-sm-7
                input.form-control(type='text', name='type', id='type', placeholder='sport type', required)
        .form-group
            .col-sm-offset-3.col-sm-7
                button.btn.btn-success(type='submit')
                    i.fa.fa-user-plus
                    | Create Sport

